<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding User, RelativeSource={RelativeSource Self}, Mode=TwoWay}">


    <Grid>

        <!--Hendle Engineer -->
        <Image Source="Images/a.png" HorizontalAlignment="Left" Height="414" Margin="6,0,0,0" VerticalAlignment="Center" Width="784" Stretch="Fill"/>
        <Button Content="Hendle Engineer"  FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Height="82" Width="182"
        Click="btnEngineer_Click" FontSize="20" FontWeight="Bold" BorderBrush="{x:Null}"/>
        <Button Content="Initalization"  FontFamily="Comic Sans MS" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="182"
        Click="btnInit_Click" Margin="10,192,0,0" FontWeight="Bold" FontSize="20" BorderBrush="{x:Null}"/>
        <Button Content="Reset" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="10,320,0,0" VerticalAlignment="Top" Height="82" Width="182"
        Click="btnReset_Click" FontSize="20" FontWeight="Bold" BorderBrush="{x:Null}"/>


        <Grid Margin="496,51,104,183" Width="200" Height="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="57*"/>
            </Grid.ColumnDefinitions>
            <Button Content="log in" HorizontalAlignment="Left" Margin="60,123,0,0" VerticalAlignment="Top" Width="120" Height="21"
                 Click="btnOPEN_Click" FontFamily="Comic Sans MS" Grid.ColumnSpan="4" Grid.RowSpan="2"/>
            <TextBox Text="{Binding UserId, Mode=TwoWay, NotifyOnValidationError=true,ValidatesOnExceptions=true}"
                   HorizontalAlignment="Left" Margin="60,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                   MaxLength ="9" Grid.ColumnSpan="4" Grid.RowSpan="2"/>

            <PasswordBox  Name="PasswordBox"
               HorizontalAlignment="Left" Margin="60,172,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="4" Grid.RowSpan="2"/>
            <TextBox HorizontalAlignment="Left" Height="18" Margin="-17,76,0,0" TextWrapping="Wrap" Text="ID:" VerticalAlignment="Top" Width="72" Grid.RowSpan="2" Grid.Column="1"/>
            <TextBox HorizontalAlignment="Left" Height="16" Margin="-17,101,0,0" TextWrapping="Wrap" Text="PASSWORD:" 
                      VerticalAlignment="Top" Width="72" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            <TextBox  Text="{Binding Password, Mode=TwoWay, NotifyOnValidationError=true,ValidatesOnExceptions=true}"
                      Grid.Column="1" HorizontalAlignment="Left" Margin="60,99,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="3"/>
        </Grid>

    </Grid>
</Window>
