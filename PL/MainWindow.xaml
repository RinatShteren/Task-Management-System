<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid>

        <!--Hendle Engineer -->
        <Image Source="Images/a.png" HorizontalAlignment="Left" Height="414" Margin="6,0,0,0" VerticalAlignment="Center" Width="784" Stretch="Fill"/>
        <Button Content="Hendle Engineer"  FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Height="82" Width="182"
        Click="btnEngineer_Click" FontSize="20" FontWeight="Bold" BorderBrush="{x:Null}"/>
        <Button Content="Initalization"  FontFamily="Comic Sans MS" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="182"
        Click="btnInit_Click" Margin="10,192,0,0" FontWeight="Bold" FontSize="20" BorderBrush="{x:Null}"/>
        <Button Content="Reset" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="10,320,0,0" VerticalAlignment="Top" Height="82" Width="182"
        Click="btnReset_Click" FontSize="20" FontWeight="Bold" BorderBrush="{x:Null}"/>





    </Grid>


</Window>
