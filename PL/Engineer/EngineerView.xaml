<Window x:Class="PL.Engineer.EngineerView"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Title="EngineerView" Height="450" Width="800"
        DataContext="{Binding CurrentEngineer, RelativeSource={RelativeSource Self}, Mode=TwoWay}">

    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="122,105,0,0" VerticalAlignment="Top" Width="145"/>
        <Label Content="Id" HorizontalAlignment="Left" Height="25" Margin="122,152,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Email&#xD;&#xA;Email" HorizontalAlignment="Left" Height="25" Margin="122,199,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Level" HorizontalAlignment="Left" Height="25" Margin="122,251,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Cost" HorizontalAlignment="Left" Height="25" Margin="122,298,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.961,0.615"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
            Text="{Binding EngineerName, Mode=TwoWay, NotifyOnValidationError=true,ValidatesOnExceptions=true}"
            HorizontalAlignment="Left" Margin="267,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Grid.Row="2" Grid.Column="2" 
            Text="{Binding EngineerId, Mode=TwoWay, NotifyOnValidationError=true,ValidatesOnExceptions=true}"
            HorizontalAlignment="Left" Margin="267,164,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Grid.Row="2" Grid.Column="3" 
            Text="{Binding EngineerEmail, Mode=TwoWay, NotifyOnValidationError=true,ValidatesOnExceptions=true}"
            HorizontalAlignment="Left" Margin="267,212,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Grid.Row="2" Grid.Column="4" 
            Text="{Binding EngineerCost, Mode=TwoWay, NotifyOnValidationError=true,ValidatesOnExceptions=true}"
            HorizontalAlignment="Left" Margin="267,293,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>


        <ComboBox HorizontalAlignment="Left" Margin="267,248,0,0" VerticalAlignment="Top" Width="120"
            ItemsSource="{Binding  EngineerLevel }" 
            SelectedValue="{Binding EngineerLevel, Mode=TwoWay, NotifyOnValidationError=true,ValidatesOnExceptions=true}">
            
        </ComboBox>

        <Button Grid.Row="9" Grid.Column="0" 
            Content="{Binding Id, Mode=OneTime, Converter={StaticResource ConverIdToContentKey}}" 
            HorizontalAlignment="Left" Margin="3,0,0,0"  VerticalAlignment="Top" Padding="5" 
            Click="btnAddUpdate_Click"/>

    </Grid>
</Window>