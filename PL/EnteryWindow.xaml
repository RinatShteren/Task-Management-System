<Window x:Class="PL.EnteryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="EnteryWindow" Height="450" Width="800"
        DataContext="{Binding CurrentEngineer, RelativeSource={RelativeSource Self}, Mode=TwoWay}">

    <Grid>
        <Grid Margin="496,51,104,183" Width="200" Height="200">
            <Button Content="log in" HorizontalAlignment="Left" Margin="30,122,0,0" VerticalAlignment="Top" Width="120" Height="21"
                    Click="btnOPEN_Click" FontFamily="Comic Sans MS"/>
            <TextBox  Text="{Binding id, Mode=TwoWay, NotifyOnValidationError=true,ValidatesOnExceptions=true}"
                      HorizontalAlignment="Left" Margin="30,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                      MaxLength ="9"/>
            <TextBlock HorizontalAlignment="Left" Margin="39,47,0,0" TextWrapping="Wrap" Text="Enter the system" VerticalAlignment="Top"
                      />
            <PasswordBox HorizontalAlignment="Left" Margin="30,99,0,0" VerticalAlignment="Top" Width="120"/>
        </Grid>

    </Grid>
</Window>
