<Window x:Class="PL.Admin.DateSelectionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Admin"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode= Self}}"
        Title="DateSelectionForm" Height="200" Width="200">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/back.jpg"/>
        </Grid.Background>
        <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay}" FontFamily="Segoe UI Black" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Height="36" Width="128"/>
        <Button Content="Done" HorizontalAlignment="Left" Margin="100,92,0,0" VerticalAlignment="Top" Click="DoneButton_Click" FontFamily="Segoe UI Black" Width="82" Height="53"/>
        <Label Content="Choose the project start date:" HorizontalAlignment="Center" Height="30" Margin="0,10,0,0" VerticalAlignment="Top" Width="184" FontFamily="Segoe UI Black"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="8,92,0,0" VerticalAlignment="Top" Click="cancelButton_Click" FontFamily="Segoe UI Black" Width="81" Height="53"/>

    </Grid>
</Window>
